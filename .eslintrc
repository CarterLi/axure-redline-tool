{
    "env": {
        "browser": true,
        "jest": true
    },
    "extends": "airbnb",
    "rules": {
        "arrow-parens": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "curly": [
            "error",
            "all"
        ],
        "import/no-dynamic-require": false,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "./*.js",
                    "./tasks/**/*.js"
                ]
            }
        ],
        "indent": [
            "error",
            4
        ],
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "sort-imports": [
            "error",
            {
                "ignoreCase": false,
                "ignoreMemberSort": false,
                "memberSyntaxSortOrder": [
                    "single",
                    "multiple",
                    "all",
                    "none"
                ]
            }
        ],
        "sort-keys": [
            "error",
            "asc",
            {
                "caseSensitive": true,
                "natural": true
            }
        ]
    }
}
